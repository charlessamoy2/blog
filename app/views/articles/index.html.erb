<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Body</th>
        </tr>
    </thead>

    <tbody>
        <% @articles.each do |article|%>
            <tr>
                <td><%= article.id%></td>
                <td><%= article.name%></td>
                <td><%= article.body%></td>
                <td><%= link_to 'Edit', edit_article_path(:id => article.id ) %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'New Article', new_article_path %>