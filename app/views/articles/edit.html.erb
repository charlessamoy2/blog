<%= form_with scope: :article, url: update_article_path, local: true do |f| %>

<p>
    <% if @article.errors.any? %>
        <ul>
            <% @article.errors.full_messages.each do |message| %>
                <li>
                    <%= message%>
                </li>
            <% end %>
        </ul>
    <% end %>
</p>

<p>
    <%= f.label :name %>
    <%= f.text_field :name , placeholder: @article.name %>
</p>

<p>
    <%= f.label :body %>
    <%= f.text_area :body , placeholder: @article.body %>
</p>

<p>
    <%= hidden_field_tag(:id , @article.id) %>
    <%= f.submit %>
</p>

<% end %>

<%= link_to 'Back to Articles', articles_path%>