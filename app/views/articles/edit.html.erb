<%= stylesheet_link_tag 'style.css' %>

<%= form_for(:article) do |f| %>

<p>
    <% if @article.errors.any? %>
        <ul>
            <% @article.errors.full_messages.each do |message| %>
                <li>
                    <%= message%>
                </li>
            <% end %>
        </ul>
    <% end %>
</p>

<p>
    <%= f.label :name %>
    <%= f.text_field :name , value: @article.name %>
</p>

<p>
    <%= f.label :body %>
    <%= f.text_area :body , value: @article.body %>
</p>

<p>
    <%= hidden_field_tag(:id, @article.id) %>
    <%= f.submit 'Update', formaction: update_article_path%>
    <%= f.submit 'Delete', formaction: delete_article_path%>
</p>

<% end %>

<%= link_to 'Back to Articles', articles_path%>