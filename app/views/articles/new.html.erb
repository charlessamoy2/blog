<%= stylesheet_link_tag 'style.css' %>

<%= form_with scope: :article, url: create_article_path, local: true do |f| %>

<h1>New Article</h1>

<div>
    <% if @article.errors.any? %>
        <ul>
            <% @article.errors.full_messages.each do |message| %>
                <li>
                    <%= message%>
                </li>
            <% end %>
        </ul>
    <% end %>
</div>

<div>
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name %>
</div>

<div>
    <%= f.label :body, "Body:" %>
    <%= f.text_area :body %>
</div>

<div class="form-submit">
    <%= f.submit %>
</div>

<% end %>

<%= link_to 'Back to Articles', articles_path, class: "btn-link-to" %>